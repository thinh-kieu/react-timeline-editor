{
  "name": "@xzdarcy/timeline-engine",
  "version": "1.0.0",
  "type": "module",
  "description": "Timeline engine for react-timeline-editor",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:dts && npm run build:rollup",
    "build:dev": "npm run clean && npm run build:dts && npm run build:rollup:dev",
    "build:rollup": "cross-env NODE_ENV=production rollup -c",
    "build:rollup:dev": "cross-env NODE_ENV=development rollup -c",
    "build:dts": "tsc --project tsconfig.build.json --emitDeclarationOnly --outDir dist && node fix-dts-imports.cjs",
    "dev": "cross-env NODE_ENV=development rollup -c --watch",
    "dev:prod": "cross-env NODE_ENV=production rollup -c --watch",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "build:tsc": "tsc"
  },
  "keywords": [
    "react",
    "timeline",
    "engine"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "cross-env": "^7.0.3",
    "rollup": "^4.9.6",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": ">=18.2.0"
  }
}
