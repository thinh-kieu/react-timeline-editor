{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "types": ["react"],
    "jsx": "react-jsx",
    "module": "preserve",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["global-components"]
}
